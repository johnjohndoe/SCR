<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:paddingBottom="@dimen/activity_vertical_margin"
                                    android:paddingLeft="@dimen/activity_horizontal_margin"
                                    android:paddingRight="@dimen/activity_horizontal_margin"
                                    android:paddingTop="@dimen/activity_vertical_margin"
                                    android.support.v7.cardview:cardMaxElevation="@dimen/cardview_elevation"
                                    android.support.v7.cardview:cardUseCompatPadding="true">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/titleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        tools:text="Title"/>


                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/track"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleTV"
                        android:fontFamily="sans-serif"
                        tools:text="Hall 1"/>


            </LinearLayout>

            <TextView
                    android:id="@+id/speaker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right"
                    tools:text="Speakers\nfii"/>

        </LinearLayout>


        <TextView
                android:id="@+id/abstractTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/track"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                tools:text="Abstract"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/noButton"
                    style="@style/ShareButton"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="16dp"
                    android:src="@drawable/ic_action_thumb_down"/>


            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/shareView"
                    style="@style/ShareButton"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="16dp"
                    android:src="@drawable/ic_social_share"/>

            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/yesButton"
                    style="@style/ShareButton"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="16dp"
                    android:src="@drawable/ic_action_thumb_up"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
